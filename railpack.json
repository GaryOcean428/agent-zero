{
  "name": "gary-zero",
  "language": "python",
  "runtime": "python:3.13",
  "packageManager": "uv",
  "buildCommand": "./scripts/build.sh",
  "startCommand": "./scripts/start.sh",
  "healthcheck": {
    "path": "/health",
    "timeout": 300
  },
  "environment": {
    "PORT": "8000",
    "WEB_UI_HOST": "0.0.0.0",
    "PYTHONUNBUFFERED": "1",
    "RAILWAY_ENVIRONMENT": "production"
  },
  "systemDependencies": [
    "portaudio19-dev",
    "libasound-dev", 
    "libportaudio2",
    "libportaudiocpp0",
    "gcc",
    "g++",
    "build-essential",
    "pkg-config",
    "libffi-dev",
    "libssl-dev",
    "libxml2-dev",
    "libxslt-dev",
    "zlib1g-dev",
    "libjpeg-dev",
    "libpq-dev"
  ],
  "cache": {
    "uv": "/root/.cache/uv",
    "pip": "/root/.cache/pip"
  },
  "volumes": [
    {
      "name": "gary-zero-data",
      "mountPath": "/app/data",
      "size": "10GB"
    }
  ],
  "buildOptimizations": {
    "pruneDependencies": false,
    "enableBuildKit": true,
    "layerCaching": true
  }
}