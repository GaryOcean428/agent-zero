{
  "entry": [
    "webui/index.js",
    "webui/js/initFw.js",
    "webui/js/enhanced-ux.js",
    "webui/components/**/*.js"
  ],
  "extensions": [".js", ".ts"],
  "ignorePatterns": [
    "**/node_modules/**",
    "**/dist/**",
    "**/build/**",
    "**/*.min.js",
    "**/webui/js/alpine*.js",
    "**/webui/js/transformers*.js",
    "**/webui/js/lib/**",
    "**/webui/js/libs/**"
  ],
  "aliases": {
    "/js/*": ["webui/js/*"],
    "/components/*": ["webui/components/*"]
  }
}